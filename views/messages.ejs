<% var title = title %>
<%include includes/head.ejs %>

<body>
<div class="container-fluid border-bottom">
    <div class="container">
        <% if(authUser) { %>
        <% include includes/navbar-logined.ejs %>
        <% } else {%>
        <% include includes/navbar.ejs %>
        <%}%>
    </div>
</div>

<div class="container messeges-app-container">
    <div class="row">
        <div class="col-md-4">
            <div class="chats">
                <% chats.chats.forEach(function (one) { %>
                <div class="messages-chat">
                    <a href="/messages/<%=one.messages._id%>">
                        <% if(one.to.img) {%>
                        <img src="<%=one.to.img%>" class="pull-left message-img">
                        <%} else {%>
                        <img src="/images/account-icon-8.png" class="pull-left message-img">
                        <% } %>
                        <div class="chat-text-container clearfix pull-left">
                            <div class="author"><%=one.to.name%></div>
                        </div>
                    </a>
                </div>
                <% }) %>
            </div>
        </div>
        <div class="col-md-8 hidden-xs hidden-sm">
        <div class="messages-row">
            <p>Please choose conversation or create new.</p>
        </div>
    </div>
    </div>
</div>


<% include includes/footer.ejs %>

<script type="text/javascript" src="/javascripts/jquery.min.js"></script>
</body>
</html>